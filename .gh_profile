# $HOME/.gh_profile

# fix error "Github API Rate limit exceeded" while brew search coffee
# replace that dummy value on line below after cloning onto your Mac
# NOTE that Homebrew token should be scope-less
export HOMEBREW_GITHUB_API_TOKEN="https://github.com/settings/tokens"

# standard Github.com API auth token
export GH_TOKEN="https://github.com/settings/tokens"

# reuse GH_TOKEN for github-mcp-server with Gemini CLI
# open https://tiny.cc/ghmcp-gemcli
GITHUB_MCP_PAT="$GH_TOKEN"

# git clone https://github.com/github/github-mcp-server.git
export GITHUB_PERSONAL_ACCESS_TOKEN="$GH_TOKEN"